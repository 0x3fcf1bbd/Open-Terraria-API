<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="150" Width="400" Height="150"
        x:Class="OTAPI.Client.Launcher.MainWindow"
        Title="OTAPI Client Launcher">

  <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

    <Button IsEnabled="{Binding IsVanillaReady}" Margin="0,10,0,0" Command="{Binding OnStartVanilla}">Launch vanilla Terraria</Button>
    <TextBlock IsVisible="{Binding !IsVanillaReady}" Foreground="Red" FontSize="12">OTAPI executable not found</TextBlock>
    <!--<TextBlock Text="{Binding IsVanillaReady}"/>-->

    <Button IsEnabled="{Binding IsOTAPIReady}" Margin="0,10,0,0" Command="{Binding OnStartOTAPI}">Launch OTAPI Terraria</Button>
    <TextBlock IsVisible="{Binding !IsOTAPIReady}" Foreground="Red" FontSize="12">OTAPI executable not found</TextBlock>
    <!--<TextBlock Text="{Binding IsOTAPIReady}"/>-->

  </StackPanel>

</Window>

<?xml version="1.0" encoding="UTF-8"?>
<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net5.0</TargetFramework>
		<Version>3.0.0-alpha9</Version>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Mono.Cecil" Version="0.11.3" />
		<PackageReference Include="MonoMod" Version="21.4.29.1" />
		<PackageReference Include="MonoMod.RuntimeDetour.HookGen" Version="21.4.29.1" />
		<PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
		<PackageReference Include="System.Security.Permissions" Version="5.0.0" />
		<PackageReference Include="NuGet.Packaging" Version="5.9.1" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\ModFramework\ModFramework.csproj" />
		<ProjectReference Include="..\ModFramework.Modules\ModFramework.Modules.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Reference Include="TerrariaServer">
			<HintPath>..\OTAPI.Setup\bin\Debug\net5.0\TerrariaServer.dll</HintPath>
		</Reference>
	</ItemGroup>

	<Import Project="..\OTAPI.Setup\bin\Debug\net5.0\AutoGenerated.target" />
	<ItemGroup>
		<None Include="..\OTAPI.Setup\bin\Debug\net5.0\AutoGenerated.target" Link="AutoGenerated.target" />
	</ItemGroup>

	<ItemGroup>
		<Refs Include="$(MSBuildProjectDirectory)\..\OTAPI.Scripts\*.refs" />
		<Patches Include="$(MSBuildProjectDirectory)\..\OTAPI.Scripts\Patches\*" />
		<Modifications Include="$(MSBuildProjectDirectory)\..\OTAPI.Scripts\Modifications\*" />
	</ItemGroup>

	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<MakeDir Directories="$(TargetDir)modifications\" />
		<Copy SourceFiles="$(TargetDir)..\..\..\..\ModFramework.Modules\bin\Debug\net5.0\ModFramework.Modules.dll" DestinationFolder="$(TargetDir)modifications" SkipUnchangedFiles="false" />
		<Copy SourceFiles="$(TargetDir)..\..\..\..\ModFramework.Modules\bin\Debug\net5.0\ModFramework.Modules.pdb" DestinationFolder="$(TargetDir)modifications" SkipUnchangedFiles="false" />
		<Copy SourceFiles="$(TargetDir)..\..\..\..\ModFramework.Modules\bin\Debug\net5.0\ModFramework.Modules.deps.json" DestinationFolder="$(TargetDir)modifications" SkipUnchangedFiles="false" />
		<MakeDir Directories="$(TargetDir)csharp\" />
		<MakeDir Directories="$(TargetDir)csharp\modifications\" />
		<Copy SourceFiles="@(Refs)" DestinationFolder="$(TargetDir)csharp/modifications/" />
		<Copy SourceFiles="@(Patches)" DestinationFolder="$(TargetDir)csharp/modifications/Patches" />
		<Copy SourceFiles="@(Modifications)" DestinationFolder="$(TargetDir)csharp/modifications/Modifications" />
	</Target>

</Project>